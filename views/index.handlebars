<div class="col-xs-12 text-center">
<img src="assets/img/hamburger.jpg" alt="burger">
<h1>Eat-Da-Burger!</h1>
</div>
<div class="col-xs-12 text-center col-sm">
    <h2>What kind of food do you want to order?</h2>

    <form class="create-form">

        <div class="form-group">
            <label for="burger-name">Burger Name:</label>
            <input type="text" id="burger-name" burger_name="burger_name">
        </div>

        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>

<div class="container pt-5">
    <div class="row">
        <div class="col-6">
            <h2>Menu</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Devoured</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="pt-1">
                    {{!-- {{> burgers/burger-block devoured=false}} --}}
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>